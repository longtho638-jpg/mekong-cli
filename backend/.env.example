# App Metadata
PROJECT_NAME="Agency OS"
ENVIRONMENT=development
DEBUG=true
VERSION=dev

# Security
SECRET_KEY=your-secret-key-here

# Monitoring & Observability
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_ENABLED=true  # Set to 'false' to disable error tracking
ENV=development  # Environment name for Sentry (development, staging, production)

# Database
DATABASE_URL=sqlite:///./agencyos.db
