{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "globalEnv": [
        "NODE_ENV",
        "VERCEL_ENV"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ],
            "cache": true
        },
        "lint": {
            "outputs": [],
            "cache": true
        },
        "lint:strict": {
            "outputs": [],
            "cache": true
        },
        "typecheck": {
            "outputs": [],
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "cache": true
        },
        "clean": {
            "cache": false
        }
    }
}