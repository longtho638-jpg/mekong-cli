{
  "name": "@agencyos/i18n",
  "version": "0.1.0",
  "description": "Shared i18n package for Antigravity/Mekong CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./astro": {
      "import": "./dist/astro/index.js",
      "require": "./dist/astro/index.js",
      "types": "./dist/astro/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "i18n:extract": "tsx scripts/extract.ts",
    "i18n:validate": "tsx scripts/validate.ts"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "^25.0.10",
    "@types/react": "^18.2.0",
    "glob": "^13.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
