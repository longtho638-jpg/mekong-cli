if [ -f "apps/dashboard/tsconfig.json" ]; then
    echo "   â†’ TypeScript check..."
    cd apps/dashboard
    pnpm exec tsc --noEmit --skipLibCheck 2>/dev/null || {
        echo "âŒ TypeScript errors found. Fix before committing."
        exit 1
    }
    cd ../..
fi

