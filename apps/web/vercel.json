{
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/docs",
      "destination": "https://docs.mekongmarketing.com/docs"
    },
    {
      "source": "/docs/:path*",
      "destination": "https://docs.mekongmarketing.com/docs/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}
