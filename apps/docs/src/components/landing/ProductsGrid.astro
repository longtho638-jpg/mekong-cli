---
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---
<section class="py-16 bg-[var(--color-bg-tertiary)]/30 border-y border-[var(--color-border)]" id="products">
  <div class="mx-auto max-w-content px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-4 text-[var(--color-text-primary)]">
      {t('landing.agencyos.hero.products.title')}
    </h2>
    <p class="text-center text-[var(--color-text-muted)] mb-12">{t('landing.agencyos.hero.products.subtitle')}</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <!-- FREE Column -->
      <div class="products-column">
        <div class="column-header free-header">üÜì {t('landing.agencyos.hero.products.free_label')}</div>
        <a href={getRelativeLocaleUrl(locale, '/docs')} class="product-card">
          <span class="product-icon">üìö</span>
          <div class="product-info">
            <div class="product-name">{t('nav.docs')}</div>
            <div class="product-desc">{t('landing.nav.docs_desc')}</div>
          </div>
          <span class="product-badge free-badge">FREE</span>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/docs/getting-started')} class="product-card">
          <span class="product-icon">üõ†Ô∏è</span>
          <div class="product-info">
            <div class="product-name">Mekong-CLI</div>
            <div class="product-desc">{t('landing.nav.mekong_cli_desc')}</div>
          </div>
          <span class="product-badge free-badge">FREE</span>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/binh-phap')} class="product-card">
          <span class="product-icon">üèØ</span>
          <div class="product-info">
            <div class="product-name">{t('binh_phap.title')}</div>
            <div class="product-desc">{t('landing.nav.binh_phap_desc')}</div>
          </div>
          <span class="product-badge free-badge">FREE</span>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/workflows')} class="product-card">
          <span class="product-icon">üìã</span>
          <div class="product-info">
            <div class="product-name">{t('nav.workflows')}</div>
            <div class="product-desc">{t('landing.nav.workflows_desc')}</div>
          </div>
          <span class="product-badge free-badge">FREE</span>
        </a>
      </div>

      <!-- PAID Column -->
      <div class="products-column">
        <div class="column-header paid-header">üí∞ {t('landing.agencyos.hero.products.paid_label')}</div>
        <a href={getRelativeLocaleUrl(locale, '/pricing')} class="product-card featured-card">
          <span class="product-icon">‚≠ê</span>
          <div class="product-info">
            <div class="product-name">{t('pricing.plans.starter.name')}</div>
            <div class="product-desc">{t('pricing.plans.starter.description')}</div>
          </div>
          <span class="product-badge paid-badge">{t('pricing.plans.starter.price')}{t('landing.agencyos.hero.products.mo')}</span>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/pricing')} class="product-card popular-card">
          <span class="popular-tag">{t('landing.agencyos.hero.products.popular')}</span>
          <span class="product-icon">üöÄ</span>
          <div class="product-info">
            <div class="product-name">{t('pricing.plans.pro.name')}</div>
            <div class="product-desc">{t('pricing.plans.pro.description')}</div>
          </div>
          <span class="product-badge paid-badge">{t('pricing.plans.pro.price')}{t('landing.agencyos.hero.products.mo')}</span>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/franchise')} class="product-card">
          <span class="product-icon">üèÜ</span>
          <div class="product-info">
            <div class="product-name">{t('pricing.plans.franchise.name')}</div>
            <div class="product-desc">{t('pricing.plans.franchise.description')}</div>
          </div>
          <span class="product-badge franchise-badge">{t('pricing.plans.franchise.price')}{t('landing.agencyos.hero.products.mo')}</span>
        </a>
      </div>

      <!-- FEATURES Column -->
      <div class="products-column">
        <div class="column-header features-header">‚ú® {t('landing.agencyos.hero.products.features_label')}</div>
        <a href={getRelativeLocaleUrl(locale, '/newsletter')} class="product-card">
          <span class="product-icon">üìß</span>
          <div class="product-info">
            <div class="product-name">{t('landing.nav.newsletter_hub')}</div>
            <div class="product-desc">{t('landing.nav.newsletter_hub_desc')}</div>
          </div>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/affiliate')} class="product-card">
          <span class="product-icon">üéØ</span>
          <div class="product-info">
            <div class="product-name">{t('landing.nav.affiliate')}</div>
            <div class="product-desc">{t('landing.nav.affiliate_desc')}</div>
          </div>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/marketplace')} class="product-card">
          <span class="product-icon">üè™</span>
          <div class="product-info">
            <div class="product-name">{t('landing.nav.marketplace')}</div>
            <div class="product-desc">{t('landing.nav.marketplace_desc')}</div>
          </div>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/wallet')} class="product-card">
          <span class="product-icon">üí≥</span>
          <div class="product-info">
            <div class="product-name">{t('landing.nav.wallet')}</div>
            <div class="product-desc">{t('landing.nav.wallet_desc')}</div>
          </div>
        </a>
        <a href={getRelativeLocaleUrl(locale, '/gamification')} class="product-card">
          <span class="product-icon">üéÆ</span>
          <div class="product-info">
            <div class="product-name">{t('landing.footer.gamification')}</div>
            <div class="product-desc">Rewards & badges</div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .products-column {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .column-header {
    font-size: 0.85rem;
    font-weight: 700;
    padding: 12px 16px;
    border-radius: 10px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
  }

  .free-header {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.15), rgba(34, 197, 94, 0.05));
    color: #22c55e;
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  .paid-header {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(59, 130, 246, 0.05));
    color: #3b82f6;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .features-header {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.15), rgba(168, 85, 247, 0.05));
    color: #a855f7;
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  .product-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.25s ease;
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent-green);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .product-icon {
    font-size: 1.25rem;
  }

  .product-info {
    flex: 1;
  }

  .product-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .product-desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .product-badge {
    font-size: 0.7rem;
    font-weight: 700;
    padding: 2px 8px;
    border-radius: 100px;
  }

  .free-badge {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .paid-badge {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .franchise-badge {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
  }

  .featured-card {
    border-color: rgba(59, 130, 246, 0.3);
  }

  .popular-card {
    border: 2px solid #22c55e;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.05), transparent);
  }

  .popular-tag {
    position: absolute;
    top: -10px;
    right: 12px;
    background: #22c55e;
    color: white;
    font-size: 0.65rem;
    font-weight: 800;
    padding: 2px 8px;
    border-radius: 4px;
    letter-spacing: 0.05em;
  }
</style>
