---
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const roadmap = (locales[locale] as any).landing.agencyos.hero.roadmap;
---
<section class="py-16" id="binh-phap-roadmap">
  <div class="mx-auto max-w-content px-4 sm:px-6 lg:px-8">
    <div class="binh-phap-hero">
      <h2 class="text-4xl font-bold text-center mb-4">
        <span class="binh-phap-emoji">üèØ</span> {roadmap.title}
      </h2>
      <p class="text-center text-[var(--color-text-muted)] mb-8 max-w-2xl mx-auto">
        {roadmap.subtitle}
      </p>

      <div class="roadmap-visual">
        <div class="roadmap-path">
          <div class="roadmap-step">
            <div class="step-number">1</div>
            <div class="step-content">
              <div class="step-chapter">{roadmap.steps.planning.title}</div>
              <div class="step-desc">{roadmap.steps.planning.desc}</div>
            </div>
          </div>
          <div class="roadmap-arrow">‚Üí</div>
          <div class="roadmap-step">
            <div class="step-number">3</div>
            <div class="step-content">
              <div class="step-chapter">{roadmap.steps.attack.title}</div>
              <div class="step-desc">{roadmap.steps.attack.desc}</div>
            </div>
          </div>
          <div class="roadmap-arrow">‚Üí</div>
          <div class="roadmap-step">
            <div class="step-number">7</div>
            <div class="step-content">
              <div class="step-chapter">{roadmap.steps.maneuvers.title}</div>
              <div class="step-desc">{roadmap.steps.maneuvers.desc}</div>
            </div>
          </div>
          <div class="roadmap-arrow">‚Üí</div>
          <div class="roadmap-step final-step">
            <div class="step-number">üí∞</div>
            <div class="step-content">
              <div class="step-chapter">{roadmap.steps.final.title}</div>
              <div class="step-desc">{roadmap.steps.final.desc}</div>
            </div>
          </div>
        </div>
      </div>

      <div class="revenue-breakdown">
        <div class="revenue-item">
          <span class="revenue-label">{roadmap.revenue.bootstrap}</span>
          <span class="revenue-value">{roadmap.revenue.bootstrap_calc}</span>
        </div>
        <div class="revenue-item">
          <span class="revenue-label">{roadmap.revenue.vc}</span>
          <span class="revenue-value">{roadmap.revenue.vc_calc}</span>
        </div>
        <div class="revenue-total">
          <span class="revenue-label">{roadmap.revenue.total}</span>
          <span class="revenue-value">{roadmap.revenue.total_calc}</span>
        </div>
      </div>

      <div class="text-center mt-8">
        <a href={getRelativeLocaleUrl(locale, '/binh-phap')} class="binh-phap-cta">
          {roadmap.cta}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .binh-phap-hero {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.05), rgba(6, 182, 212, 0.05));
    border: 1px solid var(--color-border);
    border-radius: 24px;
    padding: 48px;
  }

  .binh-phap-emoji {
    animation: float 3s ease-in-out infinite;
    display: inline-block;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .roadmap-visual {
    margin: 40px 0;
    overflow-x: auto;
    padding: 16px 0;
  }

  .roadmap-path {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    min-width: fit-content;
  }

  .roadmap-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 20px 24px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    min-width: 120px;
    transition: all 0.3s ease;
  }

  .roadmap-step:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent-green);
  }

  .step-number {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
    border-radius: 50%;
    margin-bottom: 12px;
  }

  .final-step .step-number {
    background: linear-gradient(135deg, #f59e0b, #ef4444);
    font-size: 1.25rem;
    width: 48px;
    height: 48px;
  }

  .step-chapter {
    font-weight: 600;
    color: var(--color-text-primary);
    font-size: 0.95rem;
    margin-bottom: 4px;
  }

  .step-desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .roadmap-arrow {
    font-size: 1.5rem;
    color: var(--color-accent-green);
    font-weight: 700;
  }

  .revenue-breakdown {
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-width: 500px;
    margin: 0 auto;
  }

  .revenue-item {
    display: flex;
    justify-content: space-between;
    padding: 12px 16px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 10px;
  }

  .revenue-total {
    display: flex;
    justify-content: space-between;
    padding: 16px;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.15), rgba(6, 182, 212, 0.15));
    border: 2px solid #22c55e;
    border-radius: 12px;
    font-weight: 700;
  }

  .revenue-label {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .revenue-value {
    color: var(--color-text-primary);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .revenue-total .revenue-value {
    color: #22c55e;
    font-size: 1rem;
  }

  .binh-phap-cta {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(34, 197, 94, 0.3);
  }

  .binh-phap-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(34, 197, 94, 0.4);
  }

  @media (max-width: 768px) {
    .roadmap-path {
      flex-direction: column;
      gap: 8px;
    }

    .roadmap-arrow {
      transform: rotate(90deg);
    }

    .binh-phap-hero {
      padding: 24px;
    }
  }
</style>