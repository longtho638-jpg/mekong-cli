        <p class="text-[var(--color-text-muted)]">{t('landing.agencyos.hero.features.marketing.desc')}</p>
      </div>

      <!-- Sales -->
      <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)] hover:border-[var(--color-accent-blue)] transition-all">
