</section>

<style>
  .quiz-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .quiz-question {
    text-align: center;
  }

  .question-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .quiz-options {
    display: grid;
    gap: 12px;
  }

  .quiz-option {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px 24px;
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: left;
  }

  .quiz-option:hover {
    border-color: var(--color-accent-green);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .option-icon {
    font-size: 1.5rem;
  }

  .option-text {
    font-size: 1rem;
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .hidden {
    display: none !important;
  }

  .quiz-result {
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .result-card {
    padding: 32px;
    border-radius: 20px;
    text-align: center;
    border: 2px solid;
  }

  .free-result {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.02));
    border-color: #22c55e;
  }

  .starter-result {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(59, 130, 246, 0.02));
    border-color: #3b82f6;
  }

  .pro-result {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(168, 85, 247, 0.02));
    border-color: #a855f7;
  }

  .franchise-result {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.02));
    border-color: #f59e0b;
  }

  .result-emoji {
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .result-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 8px;
  }

  .result-desc {
    color: var(--color-text-muted);
    margin-bottom: 20px;
  }

  .result-products {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 24px;
  }

  .result-product {
    padding: 8px 16px;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s;
  }

  .result-product:hover {
    border-color: var(--color-accent-green);
    color: var(--color-text-primary);
  }

  .result-cta {
    display: inline-flex;
    padding: 14px 32px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s;
    box-shadow: 0 4px 16px rgba(34, 197, 94, 0.3);
  }

  .result-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(34, 197, 94, 0.4);
  }

  .quiz-restart {
    margin-top: 20px;
    padding: 12px 24px;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all 0.2s;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .quiz-restart:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text-primary);
  }
</style>

<script is:inline>
  // Quiz Functions
  function showResult(type) {
    // Hide questions
    document.getElementById('quiz-questions').classList.add('hidden');

    // Hide all results first
    document.querySelectorAll('.quiz-result').forEach(el => {
      el.classList.add('hidden');
    });

    // Show selected result
    document.getElementById('result-' + type).classList.remove('hidden');

    // Show restart button
    document.getElementById('quiz-restart').classList.remove('hidden');
  }

  function restartQuiz() {
    // Show questions
    document.getElementById('quiz-questions').classList.remove('hidden');

    // Hide all results
    document.querySelectorAll('.quiz-result').forEach(el => {
      el.classList.add('hidden');
    });

    // Hide restart button
    document.getElementById('quiz-restart').classList.add('hidden');
  }
</script>