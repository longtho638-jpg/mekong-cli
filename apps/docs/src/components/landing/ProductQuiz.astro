            <a href={getRelativeLocaleUrl(locale, '/workflows')} class="result-product">ğŸ“‹ {t('nav.workflows')}</a>
          </div>
          <a href={getRelativeLocaleUrl(locale, '/docs/getting-started')} class="result-cta">{quizData.results.free.cta}</a>
        </div>
      </div>

      <div class="quiz-result hidden" id="result-starter">
        <div class="result-card starter-result">
          <div class="result-emoji">â­</div>
          <h3 class="result-title">{quizData.results.starter.title.replace('{price}', '$29/mo')}</h3>
          <p class="result-desc">{quizData.results.starter.desc}</p>
          <div class="result-products">
            <a href={getRelativeLocaleUrl(locale, '/commands')} class="result-product">ğŸ¤– 125+ {t('nav.commands')}</a>
            <a href={getRelativeLocaleUrl(locale, '/marketing')} class="result-product">ğŸ”¥ Marketing AI</a>
            <a href={getRelativeLocaleUrl(locale, '/sales')} class="result-product">ğŸ’¼ Sales AI</a>
