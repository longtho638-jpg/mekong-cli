---
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';

interface Props {
  experiment?: {
    id: string;
    variant?: string;
  };
}

const { experiment } = Astro.props;
const variant = experiment?.variant || 'control';
const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---
<section class="py-12 bg-[var(--color-bg-tertiary)]/30 border-y border-[var(--color-border)]" data-exp-id={experiment?.id} data-exp-variant={variant}>
  <div class="mx-auto max-w-content px-4 sm:px-6 lg:px-8">
    <h2 id="pricing" class="text-3xl font-bold text-center mb-4 text-[var(--color-text-primary)]">
      {t('pricing.title')}
    </h2>
    <p class="text-center text-[var(--color-text-muted)] mb-12">{t('pricing.description')}</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      {variant === 'featured_first' ? (
        <>
          <!-- Pro (First) -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border-2 border-[var(--color-accent-green)] relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-[var(--color-accent-green)] text-white text-xs font-semibold rounded-full">{t('pricing.plans.pro.popular')}</div>
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">{t('pricing.plans.pro.name')}</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">{t('pricing.plans.pro.price')}<span class="text-sm font-normal text-[var(--color-text-muted)]">{t('pricing.plans.pro.period')}</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">{t('pricing.plans.pro.description')}</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              {(t('pricing.plans.pro.features') as unknown as string[]).map((feature: string) => (
                <li>✅ {feature}</li>
              ))}
            </ul>
          </div>
          <!-- Starter -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">{t('pricing.plans.starter.name')}</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">{t('pricing.plans.starter.price')}<span class="text-sm font-normal text-[var(--color-text-muted)]">{t('pricing.plans.starter.period')}</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">{t('pricing.plans.starter.description')}</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              {(t('pricing.plans.starter.features') as unknown as string[]).map((feature: string) => (
                <li>✅ {feature}</li>
              ))}
            </ul>
          </div>
          <!-- Franchise -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">{t('pricing.plans.franchise.name')}</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">{t('pricing.plans.franchise.price')}<span class="text-sm font-normal text-[var(--color-text-muted)]">{t('pricing.plans.franchise.period')}</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">{t('pricing.plans.franchise.description')}</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              {(t('pricing.plans.franchise.features') as unknown as string[]).map((feature: string) => (
                <li>✅ {feature}</li>
              ))}
            </ul>
          </div>
        </>
      ) : (
        <>
          <!-- Starter -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">{t('pricing.plans.starter.name')}</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">{t('pricing.plans.starter.price')}<span class="text-sm font-normal text-[var(--color-text-muted)]">{t('pricing.plans.starter.period')}</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">{t('pricing.plans.starter.description')}</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              {(t('pricing.plans.starter.features') as unknown as string[]).map((feature: string) => (
                <li>✅ {feature}</li>
              ))}
            </ul>
          </div>

          <!-- Pro -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border-2 border-[var(--color-accent-green)] relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-[var(--color-accent-green)] text-white text-xs font-semibold rounded-full">{t('pricing.plans.pro.popular')}</div>
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">{t('pricing.plans.pro.name')}</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">{t('pricing.plans.pro.price')}<span class="text-sm font-normal text-[var(--color-text-muted)]">{t('pricing.plans.pro.period')}</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">{t('pricing.plans.pro.description')}</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              {(t('pricing.plans.pro.features') as unknown as string[]).map((feature: string) => (
                <li>✅ {feature}</li>
              ))}
            </ul>
          </div>

          <!-- Franchise -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">{t('pricing.plans.franchise.name')}</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">{t('pricing.plans.franchise.price')}<span class="text-sm font-normal text-[var(--color-text-muted)]">{t('pricing.plans.franchise.period')}</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">{t('pricing.plans.franchise.description')}</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              {(t('pricing.plans.franchise.features') as unknown as string[]).map((feature: string) => (
                <li>✅ {feature}</li>
              ))}
            </ul>
          </div>
        </>
      )}
    </div>
  </div>
</section>
