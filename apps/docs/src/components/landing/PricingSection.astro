---
interface Props {
  experiment?: {
    id: string;
    variant?: string;
  };
}

const { experiment } = Astro.props;
const variant = experiment?.variant || 'control';
---
<section class="py-12 bg-[var(--color-bg-tertiary)]/30 border-y border-[var(--color-border)]" data-exp-id={experiment?.id} data-exp-variant={variant}>
  <div class="mx-auto max-w-content px-4 sm:px-6 lg:px-8">
    <h2 id="pricing" class="text-3xl font-bold text-center mb-4 text-[var(--color-text-primary)]">
      Simple Pricing. Massive Value.
    </h2>
    <p class="text-center text-[var(--color-text-muted)] mb-12">All plans include 125+ AI commands</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      {variant === 'featured_first' ? (
        <>
          <!-- Pro (First) -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border-2 border-[var(--color-accent-green)] relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-[var(--color-accent-green)] text-white text-xs font-semibold rounded-full">POPULAR</div>
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">Pro</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">$99<span class="text-sm font-normal text-[var(--color-text-muted)]">/month</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">For serious agency builders</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              <li>✅ Everything in Starter</li>
              <li>✅ 5 team seats</li>
              <li>✅ Priority support</li>
              <li>✅ API access</li>
            </ul>
          </div>
          <!-- Starter -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">Starter</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">$29<span class="text-sm font-normal text-[var(--color-text-muted)]">/month</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">Perfect for solo operators</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              <li>✅ 125+ AI commands</li>
              <li>✅ Marketing automation</li>
              <li>✅ Sales proposals</li>
              <li>✅ Community support</li>
            </ul>
          </div>
          <!-- Franchise -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">Franchise</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">$299<span class="text-sm font-normal text-[var(--color-text-muted)]">/month</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">White-label & resell</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              <li>✅ Everything in Pro</li>
              <li>✅ White-label rights</li>
              <li>✅ Custom domain</li>
              <li>✅ Revenue share (85%)</li>
            </ul>
          </div>
        </>
      ) : (
        <>
          <!-- Starter -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">Starter</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">$29<span class="text-sm font-normal text-[var(--color-text-muted)]">/month</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">Perfect for solo operators</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              <li>✅ 125+ AI commands</li>
              <li>✅ Marketing automation</li>
              <li>✅ Sales proposals</li>
              <li>✅ Community support</li>
            </ul>
          </div>

          <!-- Pro -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border-2 border-[var(--color-accent-green)] relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-[var(--color-accent-green)] text-white text-xs font-semibold rounded-full">POPULAR</div>
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">Pro</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">$99<span class="text-sm font-normal text-[var(--color-text-muted)]">/month</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">For serious agency builders</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              <li>✅ Everything in Starter</li>
              <li>✅ 5 team seats</li>
              <li>✅ Priority support</li>
              <li>✅ API access</li>
            </ul>
          </div>

          <!-- Franchise -->
          <div class="p-6 rounded-xl bg-[var(--color-bg-secondary)] border border-[var(--color-border)]">
            <h3 class="text-lg font-semibold mb-2 text-[var(--color-text-primary)]">Franchise</h3>
            <div class="text-3xl font-bold mb-4 text-[var(--color-text-primary)]">$299<span class="text-sm font-normal text-[var(--color-text-muted)]">/month</span></div>
            <p class="text-sm text-[var(--color-text-muted)] mb-6">White-label & resell</p>
            <ul class="space-y-2 text-sm text-[var(--color-text-secondary)]">
              <li>✅ Everything in Pro</li>
              <li>✅ White-label rights</li>
              <li>✅ Custom domain</li>
              <li>✅ Revenue share (85%)</li>
            </ul>
          </div>
        </>
      )}
    </div>
  </div>
</section>
