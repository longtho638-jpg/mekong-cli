---
import { getLocaleFromUrl, getRelativeLocaleUrl } from '@agencyos/i18n/astro';

interface Props {
  docs: any[];
  currentPath: string;
}

const { docs, currentPath } = Astro.props;
const currentLocale = getLocaleFromUrl(Astro.url);

// Sort items
const sortItems = (items: any[]) => {
  return items.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
};

// Filter out index page and sort
const sortedDocs = sortItems(docs.filter(doc => !doc.slug.endsWith('index') && doc.slug !== 'tools'));
---

<div class="tools-nav">
  <div class="nav-section">
    <div class="nav-items">
      {sortedDocs.map(doc => {
        const normalizedSlug = doc.slug.startsWith('docs/') ? doc.slug.slice(5) : doc.slug;
        const href = getRelativeLocaleUrl(currentLocale, `/docs/${normalizedSlug}`);
        const isActive = currentPath === href || currentPath === href + '/';
        return (
          <a href={href} class:list={['nav-link', { active: isActive }]}>
            <span>{doc.data.title}</span>
          </a>
        );
      })}
    </div>
  </div>
</div>

<style>
  .tools-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .nav-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .nav-items {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    border-radius: var(--radius-md);
    transition: all 0.15s;
    text-decoration: none;
  }

  .nav-link:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .nav-link.active {
    background: var(--color-bg-tertiary);
    color: var(--color-accent-blue);
    border-left: 2px solid var(--color-accent-blue);
    padding-left: calc(var(--space-3) - 2px); /* Adjust for border */
    font-weight: var(--font-normal);
  }
</style>

