---
import { getLocaleFromUrl, useTranslations } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const testimonials = (locales[locale] as Record<string, unknown>).landing.testimonials;
const items = Object.values(testimonials.items) as Array<{name: string; role: string; quote: string}>;
---
<section class="testimonials-section py-16 overflow-hidden border-y border-[var(--color-border)] bg-[var(--color-bg-tertiary)]/30">
  <div class="mx-auto max-w-content px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-4 text-[var(--color-text-primary)]">
      {testimonials.title}
    </h2>
    <p class="text-center text-[var(--color-text-muted)] mb-12">
      {testimonials.subtitle}
    </p>
  </div>

  <div class="testimonials-track-wrapper">
    <div class="testimonials-track">
      {items.map((item, index) => (
        <div class="testimonial-card">
          <div class="stars">⭐⭐⭐⭐⭐</div>
          <p class="quote">"{item.quote}"</p>
          <div class="author">
            <div class="avatar" style={`background: linear-gradient(135deg, ${
              index === 0 ? '#22c55e, #06b6d4' :
              index === 1 ? '#8b5cf6, #ec4899' :
              index === 2 ? '#f59e0b, #ef4444' :
              index === 3 ? '#06b6d4, #3b82f6' :
              index === 4 ? '#10b981, #34d399' :
              '#f472b6, #a855f7'
            });`}>{item.name.charAt(0)}</div>
            <div class="info">
              <span class="name">{item.name}</span>
              <span class="role">{item.role}</span>
            </div>
          </div>
        </div>
      ))}

      {/* Duplicate for infinite scroll */}
      {items.map((item, index) => (
        <div class="testimonial-card">
          <div class="stars">⭐⭐⭐⭐⭐</div>
          <p class="quote">"{item.quote}"</p>
          <div class="author">
            <div class="avatar" style={`background: linear-gradient(135deg, ${
              index === 0 ? '#22c55e, #06b6d4' :
              index === 1 ? '#8b5cf6, #ec4899' :
              index === 2 ? '#f59e0b, #ef4444' :
              index === 3 ? '#06b6d4, #3b82f6' :
              index === 4 ? '#10b981, #34d399' :
              '#f472b6, #a855f7'
            });`}>{item.name.charAt(0)}</div>
            <div class="info">
              <span class="name">{item.name}</span>
              <span class="role">{item.role}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="testimonials-fade-left"></div>
  <div class="testimonials-fade-right"></div>
</section>

<style>
  .testimonials-section {
    position: relative;
  }

  .testimonials-track-wrapper {
    overflow: hidden;
    position: relative;
  }

  .testimonials-track {
    display: flex;
    gap: 24px;
    animation: scroll 30s linear infinite;
    width: max-content;
  }

  .testimonials-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .testimonial-card {
    flex-shrink: 0;
    width: 320px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .testimonial-card:hover {
    border-color: #22c55e;
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(34, 197, 94, 0.1);
  }

  .stars {
    font-size: 0.85rem;
    margin-bottom: 12px;
  }

  .quote {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 16px 0;
    font-style: italic;
  }

  .author {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
  }

  .name {
    font-weight: 600;
    color: var(--color-text-primary);
    font-size: 0.9rem;
  }

  .role {
    color: var(--color-text-muted);
    font-size: 0.8rem;
  }

  .testimonials-fade-left,
  .testimonials-fade-right {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    pointer-events: none;
    z-index: 10;
  }

  .testimonials-fade-left {
    left: 0;
    background: linear-gradient(to right, var(--color-bg-primary), transparent);
  }

  .testimonials-fade-right {
    right: 0;
    background: linear-gradient(to left, var(--color-bg-primary), transparent);
  }

  @media (max-width: 768px) {
    .testimonial-card {
      width: 280px;
    }
  }
</style>