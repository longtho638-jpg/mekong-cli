---
import LandingLayout from '../layouts/LandingLayout.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('terms_page.title');
const description = t('terms_page.description');

const pageData = (locales[locale] as any).terms_page;
---

<LandingLayout title={title} description={description}>
  <section class="legal-page">
    <div class="legal-container">

      <div class="legal-header">
        <h1>{pageData.hero.title}</h1>
        <p class="last-updated">{pageData.hero.last_updated}</p>
      </div>

      <div class="legal-content">

        <h2>{pageData.sections.acceptance.title}</h2>
        <p>{pageData.sections.acceptance.text}</p>

        <h2>{pageData.sections.description.title}</h2>
        <p>{pageData.sections.description.intro}</p>
        <ul>
          {pageData.sections.description.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.accounts.title}</h2>
        <ul>
          {pageData.sections.accounts.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.pricing.title}</h2>
        <ul>
          {pageData.sections.pricing.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.use.title}</h2>
        <p>{pageData.sections.use.intro}</p>
        <ul>
          {pageData.sections.use.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.ip.title}</h2>
        <ul>
          {pageData.sections.ip.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.refunds.title}</h2>
        <ul>
          {pageData.sections.refunds.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.termination.title}</h2>
        <p>{pageData.sections.termination.intro}</p>
        <ul>
          {pageData.sections.termination.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>

        <h2>{pageData.sections.disclaimer.title}</h2>
        <p>{pageData.sections.disclaimer.text}</p>

        <h2>{pageData.sections.liability.title}</h2>
        <p>{pageData.sections.liability.text}</p>

        <h2>{pageData.sections.contact.title}</h2>
        <p>{pageData.sections.contact.intro}</p>
        <ul>
          <li>{pageData.sections.contact.email}</li>
        </ul>

      </div>

      <div class="legal-footer">
        <a href={getRelativeLocaleUrl(locale, '/privacy')}>{pageData.footer.privacy}</a>
      </div>

    </div>
  </section>
</LandingLayout>

<style>
  .legal-page {
    min-height: calc(100vh - 72px);
    padding: 64px 24px;
  }

  .legal-container {
    max-width: 700px;
    margin: 0 auto;
  }

  /* ===================== HEADER WOW ===================== */
  .legal-header {
    text-align: center;
    margin-bottom: 48px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .legal-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #8b5cf6, #22c55e);
    background-size: 300% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
    animation: title-shine 5s linear infinite;
  }

  @keyframes title-shine {
    0% { background-position: 0% center; }
    100% { background-position: 300% center; }
  }

  .last-updated {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* ===================== CONTENT WOW ===================== */
  .legal-content {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 32px;
    animation: content-fade 0.6s ease-out 0.2s both;
  }

  @keyframes content-fade {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .legal-content h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-top: 24px;
    margin-bottom: 12px;
  }

  .legal-content h2:first-child {
    margin-top: 0;
  }

  .legal-content p {
    color: var(--color-text-secondary);
    margin-bottom: 12px;
    line-height: 1.6;
  }

  .legal-content ul {
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .legal-content li {
    color: var(--color-text-secondary);
    margin-bottom: 8px;
    line-height: 1.5;
  }

  .legal-content a {
    color: #22c55e;
    transition: all 0.2s ease;
  }

  .legal-content a:hover {
    text-decoration: underline;
  }

  /* ===================== FOOTER WOW ===================== */
  .legal-footer {
    text-align: center;
    margin-top: 32px;
    animation: content-fade 0.6s ease-out 0.4s both;
  }

  .legal-footer a {
    color: #22c55e;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .legal-footer a:hover {
    transform: translateX(4px);
    display: inline-block;
  }
</style>
