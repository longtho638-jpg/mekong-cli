---
import { getCollection } from 'astro:content';
import DocsLayout from '../../../layouts/DocsLayout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const docsEntries = await getCollection('docs-vi');
  return docsEntries.map(entry => {
    // Content in src/content/docs/docs/* creates slugs like "docs/agents/planner"
    // URL is /docs/agents/planner, so slug param is "agents/planner"
    const normalizedSlug = entry.slug.startsWith('docs/')
      ? entry.slug.slice(5)
      : entry.slug;
    return {
      params: { slug: normalizedSlug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<DocsLayout
  title={`${entry.data.title} - AgencyOS Documentation`}
  description={entry.data.description}
  locale="vi"
  slug={entry.slug}
  headings={headings}
  content={entry}
>
  <Content />
</DocsLayout>
