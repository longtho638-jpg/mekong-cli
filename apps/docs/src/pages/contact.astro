---
import LandingLayout from '../layouts/LandingLayout.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('contact_page.title');
const description = t('contact_page.description');
---

<LandingLayout title={title} description={description}>
  <section class="contact-page">
    <div class="contact-container">

      <!-- Header -->
      <div class="contact-header">
        <h1 class="contact-title">{t('contact_page.hero.title')}</h1>
        <p class="contact-subtitle">
          {t('contact_page.hero.subtitle')}
        </p>
      </div>

      <div class="contact-grid">

        <!-- Contact Form -->
        <div class="contact-form-card">
          <h2 class="form-title">{t('contact_page.form.title')}</h2>

          <form class="contact-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div class="form-group">
              <label for="name">{t('contact_page.form.name')}</label>
              <input type="text" id="name" name="name" required placeholder={t('contact_page.form.name_placeholder')} />
            </div>

            <div class="form-group">
              <label for="email">{t('contact_page.form.email')}</label>
              <input type="email" id="email" name="email" required placeholder={t('contact_page.form.email_placeholder')} />
            </div>

            <div class="form-group">
              <label for="subject">{t('contact_page.form.subject')}</label>
              <select id="subject" name="subject" required>
                <option value="">{t('contact_page.form.subject_placeholder')}</option>
                <option value="sales">{t('contact_page.form.subjects.sales')}</option>
                <option value="support">{t('contact_page.form.subjects.support')}</option>
                <option value="partnership">{t('contact_page.form.subjects.partnership')}</option>
                <option value="franchise">{t('contact_page.form.subjects.franchise')}</option>
                <option value="other">{t('contact_page.form.subjects.other')}</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">{t('contact_page.form.message')}</label>
              <textarea id="message" name="message" required rows="5" placeholder={t('contact_page.form.message_placeholder')}></textarea>
            </div>

            <button type="submit" class="submit-btn">{t('contact_page.form.submit')}</button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="contact-info-card">
          <h2 class="info-title">{t('contact_page.info.title')}</h2>

          <div class="info-items">
            <div class="info-item">
              <div class="info-icon">üìß</div>
              <div class="info-content">
                <h3>{t('contact_page.info.email')}</h3>
                <a href="mailto:hello@agencyos.network">hello@agencyos.network</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">üí¨</div>
              <div class="info-content">
                <h3>{t('contact_page.info.discord')}</h3>
                <a href="https://discord.gg/agencyos" target="_blank">{t('contact_page.info.discord_link')}</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">üê¶</div>
              <div class="info-content">
                <h3>{t('contact_page.info.twitter')}</h3>
                <a href="https://x.com/agencyos" target="_blank">@agencyos</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">üìö</div>
              <div class="info-content">
                <h3>{t('contact_page.info.docs')}</h3>
                <a href={getRelativeLocaleUrl(locale, '/docs/getting-started/introduction')}>{t('contact_page.info.docs_link')}</a>
              </div>
            </div>
          </div>

          <!-- FAQ Link -->
          <div class="faq-link">
            <p>{t('contact_page.info.faq_prompt')}</p>
            <a href={getRelativeLocaleUrl(locale, '/pricing#faq')} class="faq-btn">{t('contact_page.info.faq_button')}</a>
          </div>
        </div>

      </div>
    </div>
  </section>
</LandingLayout>

<style>
  .contact-page {
    min-height: calc(100vh - 72px);
    padding: 64px 24px;
  }

  .contact-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  /* ===================== HEADER WOW ===================== */
  .contact-header {
    text-align: center;
    margin-bottom: 48px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .contact-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #8b5cf6, #22c55e);
    background-size: 300% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 12px;
    animation: title-shine 5s linear infinite;
  }

  @keyframes title-shine {
    0% { background-position: 0% center; }
    100% { background-position: 300% center; }
  }

  .contact-subtitle {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  /* ===================== CARDS WOW ===================== */
  .contact-form-card,
  .contact-info-card {
    padding: 32px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    animation: card-entrance 0.6s ease-out both;
    transition: all 0.3s ease;
  }

  .contact-form-card { animation-delay: 0.3s; }
  .contact-info-card { animation-delay: 0.4s; }

  @keyframes card-entrance {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .contact-form-card:hover,
  .contact-info-card:hover {
    border-color: rgba(34, 197, 94, 0.3);
    transform: translateY(-4px);
  }

  .form-title,
  .info-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: 6px;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 12px 16px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-primary);
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #22c55e;
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.15);
  }

  .submit-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    animation: btn-pulse 2.5s ease-in-out infinite;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { box-shadow: 0 0 15px 3px rgba(34, 197, 94, 0.2); }
  }

  .submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(34, 197, 94, 0.3);
  }

  .info-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 32px;
  }

  .info-item {
    display: flex;
    gap: 16px;
    align-items: flex-start;
    transition: all 0.2s ease;
  }

  .info-item:hover {
    transform: translateX(4px);
  }

  .info-icon {
    font-size: 1.5rem;
    animation: icon-bounce 2s ease-in-out infinite;
  }

  .info-item:nth-child(1) .info-icon { animation-delay: 0s; }
  .info-item:nth-child(2) .info-icon { animation-delay: 0.2s; }
  .info-item:nth-child(3) .info-icon { animation-delay: 0.4s; }
  .info-item:nth-child(4) .info-icon { animation-delay: 0.6s; }

  @keyframes icon-bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
  }

  .info-content h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 4px;
  }

  .info-content a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
  }

  .info-content a:hover {
    color: #22c55e;
  }

  .faq-link {
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
  }

  .faq-link p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 8px;
  }

  .faq-btn {
    display: inline-block;
    color: #22c55e;
    text-decoration: none;
    font-weight: 500;
  }

  .faq-btn:hover {
    text-decoration: underline;
  }
</style>
