---
import LandingLayout from '../layouts/LandingLayout.astro';
import { getLocaleFromUrl, useTranslations } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('gamification_page.title');
const description = t('gamification_page.description');

const xpData = (locales[locale] as any).gamification_page.xp;
const badgesData = (locales[locale] as any).gamification_page.badges;
const levelsData = (locales[locale] as any).gamification_page.levels;
const comingSoonData = (locales[locale] as any).gamification_page.coming_soon;
---

<LandingLayout title={title} description={description}>
  <section class="gaming-hero">
    <h1>{t('gamification_page.hero.title')}</h1>
    <p>{t('gamification_page.hero.subtitle')}</p>
  </section>

  <!-- XP System -->
  <section class="xp-section">
    <h2>{xpData.title}</h2>
    <p class="section-desc">{xpData.subtitle}</p>

    <div class="xp-table">
      <table>
        <thead>
          <tr>
            {xpData.headers.map((header: string) => (
              <th>{header}</th>
            ))}
          </tr>
        </thead>
        <tbody>
          {Object.entries(xpData.items).map(([key, item]: [string, any]) => (
            <tr>
              <td>{item[0]}</td>
              <td><span class={`xp-badge ${key === 'money' || key === 'launch' ? 'gold' : ''}`}>{item[1]}</span></td>
              <td>{item[2]}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  <!-- Achievement Badges -->
  <section class="badges-section">
    <h2>{badgesData.title}</h2>
    <p class="section-desc">{badgesData.subtitle}</p>

    <div class="badges-grid">
      {Object.entries(badgesData.items).map(([key, badge]: [string, any]) => (
        <div class={`badge-card ${key === 'money_maker' ? 'gold' : ''} ${key === 'master' ? 'legendary' : ''}`}>
          <span class="badge-icon">
            {key === 'first_timer' && 'üî∞'}
            {key === 'money_maker' && 'üí∏'}
            {key === 'shipper' && 'üöÄ'}
            {key === 'master' && 'üëë'}
            {key === 'influencer' && 'üì£'}
            {key === 'strategist' && 'üèØ'}
          </span>
          <h3>{badge.title}</h3>
          <p>{badge.desc}</p>
          <span class="badge-reward">{badge.reward}</span>
        </div>
      ))}
    </div>
  </section>

  <!-- Level Progression -->
  <section class="levels-section">
    <h2>{levelsData.title}</h2>

    <div class="levels-list">
      {Object.entries(levelsData.items).map(([key, level]: [string, any]) => (
        <div class={`level-item ${key === 'master' ? 'legendary' : ''}`}>
          <span class="level-number">{level.level}</span>
          <span class="level-title">{level.title}</span>
          <span class="level-perk">{level.perk}</span>
        </div>
      ))}
    </div>
  </section>

  <!-- Coming Soon -->
  <section class="coming-soon">
    <h2>{comingSoonData.title}</h2>
    <div class="coming-grid">
      <div class="coming-card">
        <span>üèÜ</span>
        <p>{comingSoonData.items.leaderboards}</p>
      </div>
      <div class="coming-card">
        <span>üéÅ</span>
        <p>{comingSoonData.items.rewards}</p>
      </div>
      <div class="coming-card">
        <span>ü§ù</span>
        <p>{comingSoonData.items.challenges}</p>
      </div>
      <div class="coming-card">
        <span>üíé</span>
        <p>{comingSoonData.items.nft}</p>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <h2>{t('gamification_page.cta.title')}</h2>
    <a href="/docs/getting-started/installation" class="btn-primary">{t('gamification_page.cta.button')}</a>
  </section>
</LandingLayout>

<style>
  /* ===================== HERO WOW ===================== */
  .gaming-hero {
    text-align: center;
    padding: 64px 24px 32px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .gaming-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #8b5cf6, #ec4899, #f97316, #8b5cf6);
    background-size: 300% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
    animation: rainbow-shine 4s linear infinite;
  }

  @keyframes rainbow-shine {
    0% { background-position: 0% center; }
    100% { background-position: 300% center; }
  }

  .gaming-hero p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .xp-section,
  .badges-section,
  .levels-section,
  .coming-soon {
    max-width: 900px;
    margin: 0 auto;
    padding: 48px 24px;
  }

  .xp-section h2,
  .badges-section h2,
  .levels-section h2,
  .coming-soon h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 8px;
  }

  .section-desc {
    color: var(--color-text-muted);
    margin-bottom: 24px;
  }

  .xp-table {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
  }

  .xp-table table {
    width: 100%;
    border-collapse: collapse;
  }

  .xp-table th,
  .xp-table td {
    padding: 16px;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .xp-table th {
    background: var(--color-bg-tertiary);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .xp-table td {
    color: var(--color-text-secondary);
  }

  .xp-badge {
    background: #8b5cf6;
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-weight: 700;
    font-size: 0.875rem;
    animation: xp-pulse 2s ease-in-out infinite;
  }

  @keyframes xp-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .xp-badge.gold {
    background: linear-gradient(135deg, #eab308, #f97316);
  }

  .badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
  }

  /* ===================== BADGES WOW ===================== */
  .badge-card {
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    transition: all 0.3s ease;
    animation: badge-pop 0.5s ease-out both;
  }

  .badge-card:nth-child(1) { animation-delay: 0.3s; }
  .badge-card:nth-child(2) { animation-delay: 0.4s; }
  .badge-card:nth-child(3) { animation-delay: 0.5s; }
  .badge-card:nth-child(4) { animation-delay: 0.6s; }
  .badge-card:nth-child(5) { animation-delay: 0.7s; }
  .badge-card:nth-child(6) { animation-delay: 0.8s; }

  @keyframes badge-pop {
    from { opacity: 0; transform: scale(0.8); }
    to { opacity: 1; transform: scale(1); }
  }

  .badge-card:hover {
    transform: translateY(-6px) rotate(2deg);
    border-color: #8b5cf6;
    box-shadow: 0 12px 30px rgba(139, 92, 246, 0.2);
  }

  .badge-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 12px;
    transition: transform 0.3s ease;
  }

  .badge-card:hover .badge-icon {
    transform: scale(1.2) rotate(-5deg);
  }

  .badge-card.gold {
    border-color: #eab308;
  }

  .badge-card.legendary {
    border-color: #ec4899;
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.1), rgba(139, 92, 246, 0.1));
  }

  .badge-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 12px;
  }

  .badge-card h3 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 4px 0;
  }

  .badge-card p {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 0 0 12px 0;
  }

  .badge-reward {
    background: var(--color-bg-tertiary);
    color: #22c55e;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .levels-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  /* ===================== LEVELS WOW ===================== */
  .level-item {
    display: flex;
    align-items: center;
    gap: 16px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 16px;
    animation: level-slide 0.5s ease-out both;
    transition: all 0.3s ease;
  }

  .level-item:nth-child(1) { animation-delay: 0.5s; }
  .level-item:nth-child(2) { animation-delay: 0.6s; }
  .level-item:nth-child(3) { animation-delay: 0.7s; }
  .level-item:nth-child(4) { animation-delay: 0.8s; }

  @keyframes level-slide {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .level-item:hover {
    transform: translateX(4px);
    border-color: #8b5cf6;
  }

  .level-item.legendary {
    border-color: #ec4899;
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.1), rgba(139, 92, 246, 0.1));
  }

  .level-number {
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: 700;
    min-width: 60px;
    text-align: center;
  }

  .level-title {
    font-weight: 600;
    color: var(--color-text-primary);
    min-width: 120px;
  }

  .level-perk {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-left: auto;
  }

  .coming-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 16px;
  }

  .coming-card {
    background: var(--color-bg-secondary);
    border: 1px dashed var(--color-border);
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    opacity: 0.7;
  }

  .coming-card span {
    font-size: 2rem;
    display: block;
    margin-bottom: 8px;
  }

  .coming-card p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  /* ===================== CTA WOW ===================== */
  .cta-section {
    text-align: center;
    padding: 64px 24px;
    background: linear-gradient(180deg, transparent, rgba(139, 92, 246, 0.05));
    border-top: 1px solid var(--color-border);
    animation: cta-entrance 0.6s ease-out 0.9s both;
  }

  @keyframes cta-entrance {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .btn-primary {
    display: inline-block;
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    animation: btn-pulse 2.5s ease-in-out infinite;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.4); }
    50% { box-shadow: 0 0 20px 5px rgba(139, 92, 246, 0.2); }
  }

  .btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 30px rgba(139, 92, 246, 0.4);
  }

  @media (max-width: 768px) {
    .gaming-hero h1 {
      font-size: 2rem;
    }

    .level-item {
      flex-wrap: wrap;
    }

    .level-perk {
      margin-left: 0;
      width: 100%;
      margin-top: 8px;
    }
  }
</style>
