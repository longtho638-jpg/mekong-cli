---
import LandingLayout from '../layouts/LandingLayout.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('compare_page.title');
const description = t('compare_page.description');

const pageData = (locales[locale] as any).compare_page;
---

<LandingLayout title={title} description={description}>
  <section class="compare-hero">
    <h1>{pageData.hero.title}</h1>
    <p>{pageData.hero.subtitle}</p>
  </section>

  <section class="comparison-section">
    <div class="comparison-table">
      <div class="table-header">
        <div class="feature-col">{pageData.table.headers[0]}</div>
        <div class="us-col highlight">{pageData.table.headers[1]}</div>
        <div class="other-col">{pageData.table.headers[2]}</div>
        <div class="other-col">{pageData.table.headers[3]}</div>
        <div class="other-col">{pageData.table.headers[4]}</div>
      </div>

      {Object.entries(pageData.table.rows).map(([key, row]: [string, any]) => (
        <div class={`table-row ${key === 'total' ? 'total' : ''}`}>
          <div class="feature-col">
            <span class="feature-name">{row[0]}</span>
          </div>
          <div class="us-col highlight">
            <span class={key === 'total' ? 'winner' : 'value green'}>{row[1]}</span>
          </div>
          <div class="other-col">
            <span class={`value ${key === 'total' ? 'muted' : row[2] === '❌' ? 'red' : 'yellow'}`}>{row[2]}</span>
          </div>
          <div class="other-col">
            <span class={`value ${key === 'total' ? 'muted' : row[3] === '❌' ? 'red' : 'yellow'}`}>{row[3]}</span>
          </div>
          <div class="other-col">
            <span class={`value ${key === 'total' ? 'muted' : row[4] === '❌' ? 'red' : 'yellow'}`}>{row[4]}</span>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="bottom-line">
    <div class="savings-card">
      <h2>{pageData.bottom_line.title}</h2>
      <div class="math">
        <div class="cost-row">
          <span>{pageData.bottom_line.hiring}</span>
          <span class="red">$180,000/year</span>
        </div>
        <div class="cost-row">
          <span>{pageData.bottom_line.agencyos}</span>
          <span class="green">$1,188/year</span>
        </div>
        <div class="savings-row">
          <span>{pageData.bottom_line.savings}</span>
          <span class="mega-green">$178,812/year</span>
        </div>
      </div>
      <a href={getRelativeLocaleUrl(locale, '/roi-calculator')} class="btn-secondary">{pageData.bottom_line.cta}</a>
    </div>
  </section>

  <section class="cta-section">
    <h2>{pageData.cta.title}</h2>
    <p>{pageData.cta.subtitle}</p>
    <div class="cta-buttons">
      <a href={getRelativeLocaleUrl(locale, '/signup?plan=pro')} class="btn-primary">{pageData.cta.primary}</a>
      <a href={getRelativeLocaleUrl(locale, '/demo')} class="btn-secondary">{pageData.cta.secondary}</a>
    </div>
  </section>
</LandingLayout>

<style>
  /* ===================== HERO WOW ===================== */
  .compare-hero {
    text-align: center;
    padding: 64px 24px 32px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .compare-hero h1 {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #f59e0b, #22c55e);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
    animation: title-shine 4s linear infinite;
  }

  @keyframes title-shine {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
  }

  .compare-hero p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
  }

  .comparison-section {
    max-width: 1100px;
    margin: 0 auto;
    padding: 24px;
    overflow-x: auto;
  }

  .comparison-table {
    min-width: 800px;
  }

  /* ===================== TABLE WOW ===================== */
  .table-header, .table-row {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr 1fr;
    gap: 8px;
    padding: 16px 0;
    border-bottom: 1px solid var(--color-border);
    animation: row-entrance 0.5s ease-out both;
  }

  .table-row:nth-child(1) { animation-delay: 0.2s; }
  .table-row:nth-child(2) { animation-delay: 0.25s; }
  .table-row:nth-child(3) { animation-delay: 0.3s; }
  .table-row:nth-child(4) { animation-delay: 0.35s; }
  .table-row:nth-child(5) { animation-delay: 0.4s; }
  .table-row:nth-child(6) { animation-delay: 0.45s; }
  .table-row:nth-child(7) { animation-delay: 0.5s; }
  .table-row:nth-child(8) { animation-delay: 0.55s; }
  .table-row:nth-child(9) { animation-delay: 0.6s; }
  .table-row:nth-child(10) { animation-delay: 0.65s; }
  .table-row:nth-child(11) { animation-delay: 0.7s; }
  .table-row:nth-child(12) { animation-delay: 0.75s; }

  @keyframes row-entrance {
    from { opacity: 0; transform: translateX(-15px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .table-row:hover {
    background: rgba(34, 197, 94, 0.03);
  }

  .table-header {
    font-weight: 700;
    color: var(--color-text-primary);
    font-size: 0.9rem;
  }

  .feature-col {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .feature-name {
    color: var(--color-text-secondary);
  }

  .us-col, .other-col {
    text-align: center;
    padding: 8px;
    border-radius: 8px;
  }

  .us-col.highlight {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .value {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .value.green { color: #22c55e; }
  .value.red { color: #ef4444; }
  .value.yellow { color: #f59e0b; }
  .value.muted { color: var(--color-text-muted); font-size: 0.8rem; }

  .check { color: #22c55e; font-size: 1.2rem; }
  .x { color: #ef4444; font-size: 1.2rem; }
  .partial { color: #f59e0b; font-size: 1.2rem; }

  .winner {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-weight: 700;
    font-size: 0.85rem;
    animation: winner-pulse 2s ease-in-out infinite;
  }

  @keyframes winner-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .table-row.total {
    background: var(--color-bg-secondary);
    margin-top: 8px;
    border-radius: 12px;
    border: none;
  }

  /* ===================== SAVINGS WOW ===================== */
  .bottom-line {
    max-width: 600px;
    margin: 48px auto;
    padding: 24px;
    animation: fade-up 0.6s ease-out 0.8s both;
  }

  @keyframes fade-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .savings-card {
    background: var(--color-bg-secondary);
    border: 2px solid #22c55e;
    border-radius: 16px;
    padding: 32px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .savings-card:hover {
    transform: scale(1.02);
    box-shadow: 0 15px 40px rgba(34, 197, 94, 0.2);
  }

  .savings-card h2 {
    font-size: 1.5rem;
    color: var(--color-text-primary);
    margin: 0 0 24px 0;
  }

  .math {
    margin-bottom: 24px;
  }

  .cost-row, .savings-row {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  .savings-row {
    border: none;
    padding-top: 16px;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-text-primary);
  }

  .red { color: #ef4444; font-weight: 700; }
  .green { color: #22c55e; font-weight: 700; }
  .mega-green { 
    color: #22c55e; 
    font-size: 1.5rem;
    font-weight: 800;
  }

  /* ===================== CTA WOW ===================== */
  .cta-section {
    text-align: center;
    padding: 64px 24px;
    background: linear-gradient(180deg, transparent, var(--color-bg-secondary));
    animation: fade-up 0.6s ease-out 1s both;
  }

  .cta-section h2 {
    font-size: 2rem;
    color: var(--color-text-primary);
    margin: 0 0 16px 0;
  }

  .cta-section p {
    color: var(--color-text-muted);
    margin: 0 0 32px 0;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
  }

  .btn-primary {
    padding: 16px 32px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    animation: btn-pulse 2.5s ease-in-out infinite;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { box-shadow: 0 0 20px 5px rgba(34, 197, 94, 0.2); }
  }

  .btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 30px rgba(34, 197, 94, 0.4);
  }

  .btn-secondary {
    padding: 16px 32px;
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .compare-hero h1 {
      font-size: 1.75rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
