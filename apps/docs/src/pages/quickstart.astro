---
import LandingLayout from '../layouts/LandingLayout.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('quickstart_page.title');
const description = t('quickstart_page.description');
---

<LandingLayout title={title} description={description}>
  <section class="quickstart-hero">
    <h1>{t('quickstart_page.hero.title')}</h1>
    <p class="tagline">{t('quickstart_page.hero.subtitle')}</p>
  </section>

  <section class="personas-grid">

    <!-- Developer -->
    <div class="persona-card developer">
      <div class="persona-header">
        <span class="persona-icon">üßë‚Äçüíª</span>
        <h2>{t('quickstart_page.personas.developer.title')}</h2>
        <span class="money-tag">{t('quickstart_page.personas.developer.tag')}</span>
      </div>
      <div class="commands-list">
        <code>/code</code>
        <code>/ship</code>
        <code>/video/script</code>
        <code>/video</code>
        <code>/affiliate</code>
      </div>
      <div class="money-flow">
        <p><strong>{t('quickstart_page.common.money_flow_label')}</strong></p>
        <p>{t('quickstart_page.personas.developer.money_flow').replace('$$$', '')}<span class="money">$$$</span></p>
      </div>
      <a href={getRelativeLocaleUrl(locale, '/docs/getting-started/quick-start')} class="btn-start">{t('quickstart_page.common.get_started')}</a>
    </div>

    <!-- Marketing -->
    <div class="persona-card marketing">
      <div class="persona-header">
        <span class="persona-icon">üì£</span>
        <h2>{t('quickstart_page.personas.marketing.title')}</h2>
        <span class="money-tag">{t('quickstart_page.personas.marketing.tag')}</span>
      </div>
      <div class="commands-list">
        <code>/marketing/social</code>
        <code>/video/script</code>
        <code>/video</code>
        <code>/content/cro</code>
        <code>/affiliate/scout</code>
      </div>
      <div class="money-flow">
        <p><strong>{t('quickstart_page.common.money_flow_label')}</strong></p>
        <p>{t('quickstart_page.personas.marketing.money_flow').replace('$$$', '')}<span class="money">$$$</span></p>
      </div>
      <a href={getRelativeLocaleUrl(locale, '/docs/getting-started/quick-start')} class="btn-start">{t('quickstart_page.common.get_started')}</a>
    </div>

    <!-- Sales -->
    <div class="persona-card sales">
      <div class="persona-header">
        <span class="persona-icon">üíº</span>
        <h2>{t('quickstart_page.personas.sales.title')}</h2>
        <span class="money-tag">{t('quickstart_page.personas.sales.tag')}</span>
      </div>
      <div class="commands-list">
        <code>/sales/lead</code>
        <code>/sales/proposal</code>
        <code>/intel/competitor</code>
        <code>/sales/close</code>
        <code>/finance/invoice</code>
      </div>
      <div class="money-flow">
        <p><strong>{t('quickstart_page.common.money_flow_label')}</strong></p>
        <p>{t('quickstart_page.personas.sales.money_flow').replace('$$$', '')}<span class="money">$$$</span></p>
      </div>
      <a href={getRelativeLocaleUrl(locale, '/docs/getting-started/quick-start')} class="btn-start">{t('quickstart_page.common.get_started')}</a>
    </div>

    <!-- Finance -->
    <div class="persona-card finance">
      <div class="persona-header">
        <span class="persona-icon">üìä</span>
