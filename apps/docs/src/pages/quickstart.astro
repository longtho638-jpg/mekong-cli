        <span class="money-tag">{t('quickstart_page.personas.finance.tag')}</span>
      </div>
      <div class="commands-list">
        <code>/finance</code>
        <code>/finance/runway</code>
        <code>/finance/expense</code>
        <code>/ops/billing</code>
        <code>/ops/reporting</code>
      </div>
      <div class="money-flow">
        <p><strong>{t('quickstart_page.common.money_flow_label')}</strong></p>
        <p>{t('quickstart_page.personas.finance.money_flow').replace('$$$', '')}<span class="money">$$$</span></p>
      </div>
      <a href={getRelativeLocaleUrl(locale, '/docs/getting-started/quick-start')} class="btn-start">{t('quickstart_page.common.get_started')}</a>
