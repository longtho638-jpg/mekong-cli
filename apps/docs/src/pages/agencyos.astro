---
import LandingLayout from '../layouts/LandingLayout.astro';
import Hero from '../components/Hero.astro';
import StatsCounter from '../components/landing/StatsCounter.astro';
import ProblemSection from '../components/landing/ProblemSection.astro';
import SolutionSection from '../components/landing/SolutionSection.astro';
import ProductsGrid from '../components/landing/ProductsGrid.astro';
import BinhPhapRoadmap from '../components/landing/BinhPhapRoadmap.astro';
import BusinessInfo from '../components/landing/BusinessInfo.astro';
import ProductQuiz from '../components/landing/ProductQuiz.astro';
import FeaturesSection from '../components/landing/FeaturesSection.astro';
import HowItWorks from '../components/landing/HowItWorks.astro';
import PricingSection from '../components/landing/PricingSection.astro';
import TestimonialsGrid from '../components/landing/TestimonialsGrid.astro';
import Testimonials from '../components/Testimonials.astro';
import NewsletterSignup from '../components/landing/NewsletterSignup.astro';
import FinalCTA from '../components/landing/FinalCTA.astro';
import BackgroundEffects from '../components/landing/BackgroundEffects.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('landing.agencyos.title');
const description = t('landing.agencyos.description');

const { experiments } = Astro.locals;
---

<LandingLayout title={title} description={description}>

<Hero
  title={t('landing.agencyos.hero.title')}
  description={t('landing.agencyos.hero.description')}
  badge={{
    icon: 'ðŸ§‘â€ðŸ’»',
    text: t('landing.agencyos.hero.badge')
  }}
  primaryCta={{
    text: t('landing.agencyos.hero.primary_cta'),
    link: getRelativeLocaleUrl(locale, '/docs/getting-started/installation')
  }}
  secondaryCta={{
    text: t('landing.agencyos.hero.secondary_cta'),
    link: '#how-it-works'
  }}
  experiment={{
    id: 'hero_headline_test',
    variant: experiments?.hero_headline_test
  }}
>
  <p slot="footer" class="text-sm text-[var(--color-text-muted)] mb-10">
    {t('landing.agencyos.hero.footer')}
  </p>
</Hero>

<StatsCounter />
<ProblemSection />
<SolutionSection />
<ProductsGrid />
<BinhPhapRoadmap />
<BusinessInfo />
<ProductQuiz />
<FeaturesSection />
<HowItWorks />
<PricingSection
  experiment={{
    id: 'pricing_layout_test',
    variant: experiments?.pricing_layout_test
  }}
/>
<TestimonialsGrid />
<Testimonials />
<NewsletterSignup />
<FinalCTA />
<BackgroundEffects />

</LandingLayout>
