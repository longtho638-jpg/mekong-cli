---
import LandingLayout from '../layouts/LandingLayout.astro';
import Hero from '../components/Hero.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('binh_phap.title') + ' - ' + t('app.name');
const description = t('binh_phap.description');

// Get chapters as an array for easier mapping
const chaptersData = (locales[locale] as any).binh_phap.chapters;
const chapters = Object.entries(chaptersData).map(([id, data]: [string, any]) => ({
  id,
  ...data
}));
---

<LandingLayout title={title} description={description}>
  <Hero
    badge={{
      icon: 'ðŸ¯',
      text: t('binh_phap.subtitle')
    }}
    title={t('binh_phap.title')}
    description={t('binh_phap.description')}
  >
    <p slot="footer" class="text-xl italic text-[var(--color-text-muted)] opacity-80 mb-10 reveal">
      "{t('binh_phap.quote_original')}" â€” {t('binh_phap.tagline')}
    </p>
  </Hero>

  <section class="chapters-grid">
    {chapters.map((chapter) => (
      <div class={`chapter-card ${chapter.style || ''} ${chapter.highlight ? 'highlight' : ''}`}>
        <div class="chapter-number">{chapter.id}</div>
        <div class="chapter-content">
          <h3>{chapter.chinese} {chapter.name}</h3>
          <p class="chapter-purpose">{chapter.purpose}</p>
          <div class="commands">
            {chapter.commands.map((cmd: string) => (
              <code>{cmd}</code>
            ))}
          </div>
        </div>
      </div>
    ))}
  </section>

  <section class="wisdom-section">
    <h2>ðŸŽ¯ {t('common.wisdom')}</h2>
    <div class="wisdom-grid">
      <div class="wisdom-card">
        <blockquote>"{t('binh_phap.wisdom.quote1_original')}"</blockquote>
        <p>{t('binh_phap.wisdom.quote1_translation')}</p>
      </div>
      <div class="wisdom-card">
        <blockquote>"{t('binh_phap.wisdom.quote2_original')}"</blockquote>
        <p>{t('binh_phap.wisdom.quote2_translation')}</p>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <h2>{t('binh_phap.cta.title')}</h2>
    <a href={getRelativeLocaleUrl(locale, '/commands')} class="btn-primary">{t('binh_phap.cta.button')}</a>
  </section>
</LandingLayout>

<style>
  /* ===================== CHAPTERS GRID WOW ===================== */
  .chapters-grid {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 16px;
  }

  .chapter-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 20px;
    display: flex;
    gap: 16px;
    transition: all 0.3s ease;
    animation: wow-card-entrance 0.5s ease-out both;
    position: relative;
    overflow: hidden;
  }

  /* Staggered entrance for each card */
  .chapter-card:nth-child(1) { animation-delay: 0.1s; }
  .chapter-card:nth-child(2) { animation-delay: 0.15s; }
  .chapter-card:nth-child(3) { animation-delay: 0.2s; }
  .chapter-card:nth-child(4) { animation-delay: 0.25s; }
  .chapter-card:nth-child(5) { animation-delay: 0.3s; }
  .chapter-card:nth-child(6) { animation-delay: 0.35s; }
  .chapter-card:nth-child(7) { animation-delay: 0.4s; }
  .chapter-card:nth-child(8) { animation-delay: 0.45s; }
  .chapter-card:nth-child(9) { animation-delay: 0.5s; }
  .chapter-card:nth-child(10) { animation-delay: 0.55s; }
  .chapter-card:nth-child(11) { animation-delay: 0.6s; }
  .chapter-card:nth-child(12) { animation-delay: 0.65s; }
  .chapter-card:nth-child(13) { animation-delay: 0.7s; }

  .chapter-card:hover {
    transform: translateY(-4px);
    border-color: #eab308;
    box-shadow: 0 8px 25px rgba(234, 179, 8, 0.15);
  }

  /* Shine sweep on hover */
  .chapter-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(234, 179, 8, 0.08), transparent);
    transition: left 0.5s ease;
    pointer-events: none;
  }

  .chapter-card:hover::before {
    left: 100%;
  }

  /* Special chapter styles */
  .chapter-card.highlight {
    border-color: #22c55e;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.08), transparent);
  }
  .chapter-card.highlight:hover {
    box-shadow: 0 8px 25px rgba(34, 197, 94, 0.2);
  }

  .chapter-card.danger {
    border-color: #ef4444;
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.08), transparent);
    animation: wow-card-entrance 0.5s ease-out 0.6s both, danger-pulse 3s ease-in-out infinite 1s;
  }
  @keyframes danger-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
    50% { box-shadow: 0 0 20px 3px rgba(239, 68, 68, 0.15); }
  }

  .chapter-card.fire {
    border-color: #f97316;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.08), transparent);
    animation: wow-card-entrance 0.5s ease-out 0.65s both, fire-flicker 0.5s ease-in-out infinite;
  }
  @keyframes fire-flicker {
    0%, 100% { box-shadow: 0 0 15px 2px rgba(249, 115, 22, 0.2); }
    25% { box-shadow: 0 0 20px 4px rgba(249, 115, 22, 0.3); }
    75% { box-shadow: 0 0 12px 1px rgba(249, 115, 22, 0.15); }
  }

  .chapter-card.intel {
    border-color: #8b5cf6;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.08), transparent);
  }
  .chapter-card.intel:hover {
    box-shadow: 0 8px 25px rgba(139, 92, 246, 0.2);
  }

  /* ===================== CHAPTER NUMBER WOW ===================== */
  .chapter-number {
    width: 40px;
    height: 40px;
    background: var(--color-bg-tertiary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: #eab308;
    flex-shrink: 0;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .chapter-card:hover .chapter-number {
    transform: scale(1.15);
    box-shadow: 0 0 15px rgba(234, 179, 8, 0.4);
  }

  .chapter-card.highlight .chapter-number { color: #22c55e; }
  .chapter-card.highlight:hover .chapter-number { box-shadow: 0 0 15px rgba(34, 197, 94, 0.4); }

  .chapter-card.danger .chapter-number { color: #ef4444; }
  .chapter-card.danger:hover .chapter-number { box-shadow: 0 0 15px rgba(239, 68, 68, 0.4); }

  .chapter-card.fire .chapter-number { color: #f97316; }
  .chapter-card.fire:hover .chapter-number { box-shadow: 0 0 15px rgba(249, 115, 22, 0.4); }

  .chapter-card.intel .chapter-number { color: #8b5cf6; }
  .chapter-card.intel:hover .chapter-number { box-shadow: 0 0 15px rgba(139, 92, 246, 0.4); }

  /* ===================== CHAPTER CONTENT ===================== */
  .chapter-content h3 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 4px 0;
  }

  .chapter-purpose {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 0 0 12px 0;
  }

  .commands {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .commands code {
    background: var(--color-bg-tertiary);
    color: #eab308;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .commands code:hover {
    background: rgba(234, 179, 8, 0.15);
    transform: translateY(-2px);
    box-shadow: 0 3px 10px rgba(234, 179, 8, 0.2);
  }

  .chapter-card.highlight .commands code { color: #22c55e; }
  .chapter-card.highlight .commands code:hover { background: rgba(34, 197, 94, 0.15); box-shadow: 0 3px 10px rgba(34, 197, 94, 0.2); }

  .chapter-card.danger .commands code { color: #ef4444; }
  .chapter-card.danger .commands code:hover { background: rgba(239, 68, 68, 0.15); box-shadow: 0 3px 10px rgba(239, 68, 68, 0.2); }

  .chapter-card.fire .commands code { color: #f97316; }
  .chapter-card.fire .commands code:hover { background: rgba(249, 115, 22, 0.15); box-shadow: 0 3px 10px rgba(249, 115, 22, 0.2); }

  .chapter-card.intel .commands code { color: #8b5cf6; }
  .chapter-card.intel .commands code:hover { background: rgba(139, 92, 246, 0.15); box-shadow: 0 3px 10px rgba(139, 92, 246, 0.2); }

  /* ===================== WISDOM SECTION WOW ===================== */
  .wisdom-section {
    max-width: 800px;
    margin: 48px auto;
    padding: 24px;
    text-align: center;
  }

  .wisdom-section h2 {
    font-size: 1.5rem;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .wisdom-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 16px;
  }

  .wisdom-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .wisdom-card:hover {
    border-color: #eab308;
    box-shadow: 0 4px 20px rgba(234, 179, 8, 0.1);
    transform: translateY(-2px);
  }

  .wisdom-card blockquote {
    font-size: 1rem;
    font-style: italic;
    background: linear-gradient(135deg, #eab308, #f97316);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 12px 0;
  }

  .wisdom-card p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* ===================== CTA SECTION WOW ===================== */
  .cta-section {
    text-align: center;
    padding: 64px 24px;
    background: linear-gradient(180deg, transparent, rgba(234, 179, 8, 0.05));
    border-top: 1px solid var(--color-border);
  }

  .cta-section h2 {
    font-size: 2rem;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .btn-primary {
    display: inline-block;
    background: linear-gradient(135deg, #eab308, #f97316);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    animation: flame-pulse 2s ease-in-out infinite;
    position: relative;
    overflow: hidden;
  }

  @keyframes flame-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(234, 179, 8, 0.4), 0 0 20px rgba(249, 115, 22, 0.2); }
    50% { box-shadow: 0 0 25px 5px rgba(234, 179, 8, 0.3), 0 0 40px rgba(249, 115, 22, 0.3); }
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(234, 179, 8, 0.4);
  }

  /* ===================== RESPONSIVE ===================== */
  @media (max-width: 768px) {
    .chapters-grid { grid-template-columns: 1fr; }
  }
</style>