---
import LandingLayout from '../layouts/LandingLayout.astro';
import { getLocaleFromUrl, useTranslations, getRelativeLocaleUrl } from '@agencyos/i18n/astro';
import { locales } from '@agencyos/i18n/locales';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t('faq_page.title');
const description = t('faq_page.description');

const faqs = (locales[locale] as Record<string, unknown>).faq_page.categories;
---

<LandingLayout title={title} description={description}>
  <section class="faq-page">
    <div class="faq-container">

      <!-- Hero -->
      <div class="faq-hero">
        <div class="hero-icon">‚ùì</div>
        <h1 class="faq-title">{t('faq_page.hero.title')}</h1>
        <p class="faq-subtitle">
          {t('faq_page.hero.subtitle')}
        </p>
      </div>

      <!-- Search -->
      <div class="search-wrapper">
        <input
          type="text"
          id="faq-search"
          class="search-input"
          placeholder={t('faq_page.search.placeholder')}
        />
      </div>

      <!-- FAQ Categories -->
      <div class="faq-content">
        {(faqs as Array<{icon: string; title: string; questions: unknown[]}>).map((category, catIndex: number) => (
          <div class="faq-category" style={`--cat-delay: ${catIndex}`}>
            <div class="category-header">
              <span class="category-icon">{category.icon}</span>
              <h2 class="category-title">{category.title}</h2>
            </div>
            <div class="questions-list">
              {(category.questions as Array<{q: string; a: string}>).map((item, qIndex: number) => (
                <details class="faq-item" style={`--q-delay: ${catIndex * 3 + qIndex}`}>
                  <summary class="faq-question">
                    <span class="question-text">{item.q}</span>
                    <span class="faq-icon">+</span>
                  </summary>
                  <div class="faq-answer">{item.a}</div>
                </details>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- No Results -->
      <div class="no-results" id="no-results">
        <span class="no-results-icon">üîç</span>
        <p>{t('faq_page.no_results')}</p>
      </div>

      <!-- CTA -->
      <div class="faq-cta">
        <h2>{t('faq_page.cta.title')}</h2>
        <p>{t('faq_page.cta.subtitle')}</p>
        <div class="cta-buttons">
          <a href="mailto:hello@agencyos.network" class="btn-primary">{t('faq_page.cta.support')}</a>
          <a href="https://discord.gg/agencyos" class="btn-secondary" target="_blank">{t('faq_page.cta.discord')}</a>
        </div>
      </div>

    </div>
  </section>
</LandingLayout>

<style>
  /* ===================== PAGE CONTAINER ===================== */
  .faq-page {
    min-height: calc(100vh - 72px);
    padding: 64px 24px;
  }

  .faq-container {
    max-width: 800px;
    margin: 0 auto;
  }

  /* ===================== HERO WOW ===================== */
  .faq-hero {
    text-align: center;
    margin-bottom: 40px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-icon {
    font-size: 4rem;
    margin-bottom: 16px;
    animation: float 3s ease-in-out infinite;
    filter: drop-shadow(0 0 20px rgba(34, 197, 94, 0.4));
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .faq-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #22c55e);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: title-shine 4s linear infinite;
    margin-bottom: 12px;
  }

  @keyframes title-shine {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
  }

  .faq-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
  }

  /* ===================== SEARCH WOW ===================== */
  .search-wrapper {
    margin-bottom: 40px;
    animation: fade-up 0.6s ease-out 0.2s both;
  }

  @keyframes fade-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .search-input {
    width: 100%;
    padding: 16px 20px;
    font-size: 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text-primary);
    transition: all 0.3s ease;
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-input:focus {
    outline: none;
    border-color: #22c55e;
    box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.15);
  }

  /* ===================== CATEGORY SECTIONS ===================== */
  .faq-content {
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin-bottom: 48px;
  }

  .faq-category {
    animation: category-entrance 0.6s ease-out both;
    animation-delay: calc(var(--cat-delay) * 0.1s + 0.3s);
  }

  @keyframes category-entrance {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--color-border);
  }

  .category-icon {
    font-size: 1.5rem;
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
  }

  .questions-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  /* ===================== FAQ ITEM WOW ===================== */
  .faq-item {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    animation: faq-entrance 0.5s ease-out both;
    animation-delay: calc(var(--q-delay) * 0.05s + 0.5s);
  }

  @keyframes faq-entrance {
    from { opacity: 0; transform: translateX(-10px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .faq-item:hover {
    border-color: rgba(34, 197, 94, 0.5);
    transform: translateX(4px);
  }

  .faq-item[open] {
    border-color: #22c55e;
    box-shadow: 0 4px 20px rgba(34, 197, 94, 0.15);
  }

  .faq-question {
    padding: 18px 20px;
    cursor: pointer;
    font-weight: 500;
    color: var(--color-text-primary);
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    transition: all 0.2s ease;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question:hover {
    background: rgba(34, 197, 94, 0.05);
  }

  .question-text {
    flex: 1;
  }

  .faq-icon {
    font-size: 1.5rem;
    font-weight: 300;
    color: #22c55e;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .faq-item[open] .faq-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 0 20px 20px 20px;
    color: var(--color-text-muted);
    line-height: 1.7;
    font-size: 0.95rem;
    animation: answer-reveal 0.4s ease-out;
  }

  @keyframes answer-reveal {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* ===================== NO RESULTS ===================== */
  .no-results {
    display: none;
    text-align: center;
    padding: 48px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    margin-bottom: 48px;
  }

  .no-results.visible {
    display: block;
    animation: fade-up 0.4s ease-out;
  }

  .no-results-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  .no-results p {
    color: var(--color-text-muted);
  }

  /* ===================== CTA WOW ===================== */
  .faq-cta {
    text-align: center;
    padding: 48px 32px;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(6, 182, 212, 0.1));
    border: 1px solid var(--color-border);
    border-radius: 16px;
    animation: cta-entrance 0.6s ease-out 0.8s both;
  }

  @keyframes cta-entrance {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }

  .faq-cta h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 8px;
  }

  .faq-cta p {
    color: var(--color-text-muted);
    margin-bottom: 24px;
  }

  .cta-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    padding: 14px 28px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    font-weight: 600;
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.3s ease;
    animation: btn-pulse 2.5s ease-in-out infinite;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { box-shadow: 0 0 15px 3px rgba(34, 197, 94, 0.2); }
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.3);
  }

  .btn-secondary {
    padding: 14px 28px;
    background: transparent;
    color: var(--color-text-secondary);
    font-weight: 500;
    text-decoration: none;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    border-color: #22c55e;
    color: #22c55e;
    transform: translateY(-2px);
  }

  /* ===================== HIDDEN STATE ===================== */
  .faq-item.hidden {
    display: none;
  }

  .faq-category.hidden {
    display: none;
  }

  /* ===================== RESPONSIVE ===================== */
  @media (max-width: 640px) {
    .faq-title { font-size: 2rem; }
    .hero-icon { font-size: 3rem; }
    .faq-question { padding: 16px; }
    .faq-answer { padding: 0 16px 16px; }
  }
</style>

<script>
  // Search functionality
  const searchInput = document.getElementById('faq-search');
  const noResults = document.getElementById('no-results');
  const faqContent = document.querySelector('.faq-content');

  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
    let hasResults = false;

    document.querySelectorAll('.faq-category').forEach(category => {
      let categoryHasMatch = false;
      
      category.querySelectorAll('.faq-item').forEach(item => {
        const question = item.querySelector('.question-text')?.textContent?.toLowerCase() || '';
        const answer = item.querySelector('.faq-answer')?.textContent?.toLowerCase() || '';
        
        if (question.includes(query) || answer.includes(query) || query === '') {
          item.classList.remove('hidden');
          categoryHasMatch = true;
          hasResults = true;
        } else {
          item.classList.add('hidden');
        }
      });

      if (categoryHasMatch || query === '') {
        category.classList.remove('hidden');
      } else {
        category.classList.add('hidden');
      }
    });

    if (hasResults || query === '') {
      noResults?.classList.remove('visible');
      (faqContent as HTMLElement).style.display = 'flex';
    } else {
      noResults?.classList.add('visible');
      (faqContent as HTMLElement).style.display = 'none';
    }
  });
</script>
