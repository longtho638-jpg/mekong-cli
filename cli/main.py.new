#!/usr/bin/env python3
"""
ğŸ¯ Agency OS - CLI Entry Point
==============================

Lightweight entry point that delegates to the modular command system.
"""

import sys
from pathlib import Path

# Add parent to path for imports
sys.path.insert(0, str(Path(__file__).parent.parent))

from cli.core.router import CommandRouter
from cli.ui.banner import print_banner


def main():
    """Main CLI entry point."""
    print_banner()
    
    if len(sys.argv) < 2:
        from cli.ui.help import print_help
        print_help()
        return
    
    command = sys.argv[1].lower()
    router = CommandRouter()
    router.execute(command, sys.argv[2:])


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("\n\nğŸ‘‹ Goodbye!")
        sys.exit(0)